<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.Pages.PatientPages.PatientLoginPage"
             Title="PatientLoginPage">
    <StackLayout Padding="20" Spacing="20">
        <!-- Login Information -->
        <Label Text="Login Information"
          FontSize="Medium"
          FontAttributes="Bold"/>
        <Entry Placeholder="Username" x:Name="UsernameEntry"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry"/>

        <!-- Forgot Password -->
        <Label Text="Forgot your password?"
              TextColor="Blue"
              FontSize="Small"
              HorizontalOptions="EndAndExpand"/>

        <!-- Login Button -->
        <Button Text="Login"
           Clicked="OnLoginClicked"
           HorizontalOptions="FillAndExpand"
           BackgroundColor="#007AFF"
           TextColor="White"/>



    </StackLayout>
</ContentPage>