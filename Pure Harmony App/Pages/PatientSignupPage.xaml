<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.Pages.PatientSignupPage"
             Title="PatientSignupPage">
    <StackLayout Padding="20">
        <Label Text="Patient Sign Up" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,20" />

        <Entry Placeholder="Full Name" />
        <Entry Placeholder="Email" />
        <Entry Placeholder="Phone Number" />
        <Entry Placeholder="Date of Birth" />
        <Entry Placeholder="Address" />

        <Button Text="Sign Up" Clicked="SignUp_Clicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>