<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.Pages.Alerts"
             Title=""
             BackgroundColor="LightGray">
    <VerticalStackLayout VerticalOptions="Center">
        <Frame BackgroundColor="WhiteSmoke"
               HasShadow="True"
               CornerRadius="10"
               Padding="10"
               Margin="10">

            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <!-- Image added on top of the notification bar -->
                <Image Source="download.jpeg" HorizontalOptions="Center" HeightRequest="50" Margin="0,0,0,10" />

                <!-- Notification content -->
                <Label Text="Alerts" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" Margin="5,5,5,0" />
                <Label Text="You have no new alerts" FontSize="14" HorizontalOptions="Center" Margin="5,0,5,5" />

            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
