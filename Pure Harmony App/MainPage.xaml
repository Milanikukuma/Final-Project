<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.MainPage">


    <Frame BackgroundColor="AntiqueWhite" CornerRadius="10" Padding="20" Margin="20">
        <StackLayout Spacing="20">
            <Label
                Text="Pure Harmony"
                FontSize="Header"
                TextColor="Blue"
                HorizontalOptions="Center"/>
            <Image
                Source="tb.jpg"
                HeightRequest="250"
                WidthRequest="250"
                Aspect="AspectFill"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Button
                    Text="Patient"
                    Clicked="OnPatientClicked"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="Center"
                    HeightRequest="150"
                    WidthRequest="150"/>
                <Button
                    Text="Health Professional"
                    Clicked="OnHealthProfessionalClicked"
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="Center"
                    HeightRequest="150"
                    WidthRequest="150"/>
            </StackLayout>
        </StackLayout>
    </Frame>

</ContentPage>
