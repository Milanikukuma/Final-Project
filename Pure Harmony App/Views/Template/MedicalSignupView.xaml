<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.Views.MedicalSignupView"
             Title="MedicalSignupView">
    <VerticalStackLayout Padding="20">
        <!-- Medical Professional Signup Form -->
        <Entry Placeholder="First Name" />
        <Entry Placeholder="Last Name" />
        <Entry Placeholder="Email" Keyboard="Email" />
        <Entry Placeholder="Phone Number" Keyboard="Telephone" />
        <Entry Placeholder="Specialty" />

        <!-- Additional Fields as Needed -->

        <!-- Signup Button -->
        <Button Text="Sign Up" Clicked="SignUp_Clicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>