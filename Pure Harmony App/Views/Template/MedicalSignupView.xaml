<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.Views.MedicalSignupView"
             Title="MedicalSignupView">
    <ContentPage.Content>
        <Grid RowDefinitions="*">
            <Frame Grid.Row="0" 
                BackgroundColor="WhiteSmoke" 
                HasShadow="True" 
                CornerRadius="20"
                Padding="20" Margin="20">
                <ScrollView>
                    <StackLayout Spacing="15" BindingContext="{StaticResource ViewModel}">
                        <Entry Placeholder="First Name" Keyboard="Text" Text="{Binding FirstNameEntry}" />
                        <Entry Placeholder="Last Name" Keyboard="Text" Text="{Binding LastNameEntry}" />
                        <Entry Placeholder="Email" Keyboard="Email" Text="{Binding EmailEntry}" />
                        <Entry Placeholder="Phone Number" Keyboard="Telephone" Text="{Binding PhoneNumberEntry}" />
                        <Entry Placeholder="Location" Keyboard="Text" Text="{Binding LocationEntry}" />
                        <Entry Placeholder="Specialty" Keyboard="Text" Text="{Binding SpecialtyEntry}" />
                        <Entry Placeholder="Gender" Keyboard="Text" Text="{Binding GenderEntry}" />
                        <Entry Placeholder="Physical Address" Keyboard="Text" Text="{Binding PhysicalAddressEntry}" />
                        <DatePicker Date="{Binding DateOfBirth}" />

                        <Button Text="Sign Up" 
                             Command="{Binding SignUpCommand}" 
                             HorizontalOptions="FillAndExpand"
                             BackgroundColor="#007ACC"  
                             TextColor="White"
                             CornerRadius="25" 
                             Padding="15,10"
                             Margin="0,20,0,0" />
                    </StackLayout>
                </ScrollView>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>