<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pure_Harmony_App.Views.MedicalSignupView"
             Title="MedicalSignupView">
    <ScrollView>
        <StackLayout Padding="20" BindingContext="{StaticResource ViewModel}">
            <!-- Medical Professional Signup Form -->
            <Entry Placeholder="First Name" Text="{Binding FirstNameEntry}" />
            <Entry Placeholder="Last Name" Text="{Binding LastNameEntry}" />
            <Entry Placeholder="Email" Keyboard="Email" Text="{Binding EmailEntry}" />
            <Entry Placeholder="Phone Number" Keyboard="Telephone" Text="{Binding PhoneNumberEntry}" />
            <Entry Placeholder="Specialty" Text="{Binding SpecialtyEntry}" />

            <!-- Additional Fields as Needed -->
            <Entry Placeholder="Gender" Text="{Binding GenderEntry}" />
            <Entry Placeholder="Physical Address" Text="{Binding PhysicalAddressEntry}" />
            <DatePicker Date="{Binding DateOfBirth}" />

            <!-- Signup Button -->
            <Button Text="Sign Up" Command="{Binding SignUpCommand}" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>